<div class="hero-section">
  {% if section.settings.bg_image != blank %}
    <div class="hero-bg">
      <img
        src="{{ section.settings.bg_image | image_url: width: 2000 }}"
        alt="Hero background"
        width="{{ section.settings.bg_image.width }}"
        height="{{ section.settings.bg_image.height }}"
        loading="lazy">
    </div>
  {% endif %}

  <div class="hero-overlay">
    <div class="hero-inner">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'heading' %}
            <h1 {{ block.shopify_attributes }}>
              {{ block.settings.heading }}
            </h1>

          {% when 'text' %}
            <p {{ block.shopify_attributes }}>
              {{ block.settings.text }}
            </p>

          {% when 'button' %}
            <div {{ block.shopify_attributes }}>
              <a href="{{ block.settings.link }}" class="hero-btn">
                {{ block.settings.label }}
              </a>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>
{% stylesheet %}

{% endstylesheet %}
{% schema %}
  {
    "name": "Hero Section",
    "settings": [
      {
        "type": "image_picker",
        "id": "bg_image",
        "label": "Background Image"
      }
    ],
    "blocks": [
      {
        "type": "heading",
        "name": "Heading",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Heading text",
            "default": "Browse our latest products siuuuuuuu"
          }
        ]
      }, {
        "type": "text",
        "name": "Text",
        "settings": [
          {
            "type": "text",
            "id": "text",
            "label": "Text content",
            "default": "Some description goes here..."
          }
        ]
      }, {
        "type": "button",
        "name": "Button",
        "settings": [
          {
            "type": "text",
            "id": "label",
            "label": "Button label",
            "default": "Shop all"
          }, {
            "type": "url",
            "id": "link",
            "label": "Button link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Hero Section",
        "blocks": [
          {
            "type": "heading"
          }, {
            "type": "text"
          }, {
            "type": "button"
          }
        ]
      }
    ]
  }
{% endschema %}

<style>
  .hero-section {
    position: relative;
    width: 100%;
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-bg img {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
    top: 0;
    left: 0;
    z-index: -1;
  }

  .hero-overlay {
    background: rgba(0, 0, 0, 0.4);
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-inner {
    text-align: center;
    color: #fff;
    padding: 20px;
  }
  .hero-inner h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  .hero-inner p {
    font-size: 1.25rem;
    margin-bottom: 1.5rem;
  }
  .hero-inner button {
    background: #fff;
    color: #000;
    border: none;
    padding: 12px 24px;
    font-size: 1rem;
    cursor: pointer;
    border-radius: 8px;
  }
  .hero-inner button:hover {
    background: #f5f5f5;
  }
</style>